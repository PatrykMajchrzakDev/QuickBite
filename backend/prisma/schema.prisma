// ============================
// =========== USER ===========
// ============================

model User {
  id         String   @id
  email      String   @unique
  password   String
  name       String   @unique
  role       Role     @default(USER)
  created_at DateTime @default(now())
  avatarUrl  String?
}

enum Role {
  USER
  ADMIN
  MOD
}
